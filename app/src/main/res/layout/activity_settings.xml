<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ActivitySettings"
    android:background="@drawable/background_leaves"
    >

    <!--Title-->

    <TextView
        android:id="@+id/textViewCaption"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textColor="#FF7E3309"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="30dp"
        />

    <Switch
        android:id="@+id/switchMetricUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metric Units"
        android:padding="10dp"
        android:checked="true"
        android:textStyle="bold"
        android:background="@drawable/rectangle"
        />

    <Switch
    android:id="@+id/switchImperialUnits"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Imperial Units"
    android:padding="10dp"
    android:textStyle="bold"
    android:background="@drawable/rectangle"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Notifications Period"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <Spinner
        android:id="@+id/spinnerNotificationsPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@drawable/rectangle"
        />

    <TextView
        android:id="@+id/notMinLimitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_min_limit"
        android:textColor="#FFB3DC39"
        android:background="#404803"
        android:layout_marginTop="20dp"
        android:clickable="true"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        />

    <TextView
        android:id="@+id/notMaxLimitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_max_limit"
        android:textColor="#FFB3DC39"
        android:background="#404803"
        android:layout_marginTop="20dp"
        android:clickable="true"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        />


</LinearLayout>
