<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.sabinapene">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VirtualGardernerAssistant"
        tools:targetApi="31">

        <activity
            android:name=".ActivityProfile"
            android:exported="false"
            android:noHistory="true" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:noHistory="true" />

        <activity
        android:name=".ActivitySettings"
        android:exported="false"
        android:noHistory="true" />

        <activity
            android:name=".ActivityChangeEmail"
            android:exported="false"
            android:noHistory="true" />

        <activity
            android:name=".ActivityChangeNotMaxLimit"
            android:exported="false"
            android:noHistory="true" />

        <activity
            android:name=".ActivityChangeNotMinLimit"
            android:exported="false"
            android:noHistory="true" />

        <activity
            android:name=".ActivityChangePassword"
            android:exported="false"
            android:noHistory="true" />

        <activity
            android:name=".ActivitySignUp"
            android:exported="false"
            android:noHistory="true"/>

        <activity
            android:name=".ActivitySignIn"
            android:exported="true"
            android:noHistory="false">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>